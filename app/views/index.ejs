          <div class="full-section center sm white">
              <section class="content small">
                  <p class="heading">Technologies I work with...</p>
              </section>
              <div id="tag-container">
                  <% include ./partials/tags %>
              </div>
          </div>
          <div class="full-section lg purple min-height">
              <section class="content">
                  <div id="home">
                      <% include ./partials/projects %>
